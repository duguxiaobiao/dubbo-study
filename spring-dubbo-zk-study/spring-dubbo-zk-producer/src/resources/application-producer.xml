<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">


    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="hello-world-app"  />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />

    <!--配置注册中心服务地址-->
    <dubbo:registry address="zookeeper://localhost:2181" />

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.lonely.service.SayHelloService" ref="sayHelloService"/>

    <!--与没有注册中心的区别是
        1. 不在使用 registry="N/A" 这个属性，
        2. 添加一个注册中心配置  <dubbo:registry address="zookeeper://localhost:2181" />
     -->

    <!-- 和本地bean一样实现服务 -->
    <bean id="sayHelloService" class="com.lonely.service.impl.SayHelloServiceImpl" />
</beans>